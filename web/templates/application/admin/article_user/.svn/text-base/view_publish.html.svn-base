
<div class="theContent">
    <div class="theTitle">
        <h2>Detail content</h2>
    </div><!--contenttitle-->
    <table cellpadding="0" cellspacing="0" border="0" id="table1" class="stdtable inputable">
        <tbody>
        	
                <form name="cal" method="" action="" enctype="multipart/form-data" onsubmit="javascript: return validator();">
                    <tr>
                        <td width="150"><strong>Title</strong></td>
                        <td>{$title}</td>
                    </tr>
                    <tr>
                        <td><strong>Brief</strong></td>
                        <td>{$brief}</td>
                    </tr>
                    <tr>
                        <td><strong>Content</strong></td>
                        <td>{$content}</td>
                    </tr>
                    <tr>
                        <td><strong>Kategori</strong></td>
                        <td>{$categoryid}</td>
                    </tr>
                    <tr>
                        <td><strong>Posted Date</strong></td>
                        <td>{$posted_date|date_format:"%d %b %Y"} &nbsp;{$posted_date|date_format:$time.time}</td>
                    </tr>
                    <tr>
                        <td valign="top"><strong>Image</strong></td>
                        <td><img src="{$baseurl}public_assets/user/content/{$image}"/></td>
                    </tr>
                    <tr>
                        <td valign="top"><strong>Status</strong></td>
                        <td>
                            <select name="n_status" style="width:200px;">
                                <option value="0" {if $status==0} selected="selected" {/if}>Unpublish</option>
                                <option value="1" {if $status==1} selected="selected" {/if}>Publish</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                        <input type="submit" value=" Save " class="stdbtn btn_orange"/>&nbsp;&nbsp; <input type="button" class="stdbtn btn_yellow" value=" Cancel " onclick="javascript:window.location.href='index.php?s=article_user&act=user_content&userid={$userid}'"/>
                        </td>
                    </tr>
                    <input type="hidden" name="s" value="article_user" />
                    <input type="hidden" name="act" value="viewPublish" />
                    <input type="hidden" name="userid" value="{$userid}" />
                    <input type="hidden" name="id" value="{$id}" />
                </form>
        </tbody>
    </table>
</div><!--theContent-->