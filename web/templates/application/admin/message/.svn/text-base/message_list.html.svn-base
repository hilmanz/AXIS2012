

<div class="theContent">
    <div class="theTitle">
        <h2>List Message</h2>
        <a href="index.php?s=message&act=excel_message&search={$search}" class="btn btn_document"><span>Download XLS</span></a>
    </div><!--contenttitle-->
    <div class="tableoptions">  
		<form>
        <span>Search</span>
		<input type="text" name="search" value="{$search}"/>
        <input type="submit" value="cari" class="stdbtn btn_orange"/>
		<input type="hidden" name="s" value="message" />
		</form> 
    </div><!--tableoptions-->	
    <table cellpadding="0" cellspacing="0" border="0" id="table1" class="stdtable">
        <colgroup>
            <col class="con0" style="width: 4%" />
            <col class="con1" />
            <col class="con0" />
            <col class="con1" />
            <col class="con0" />
            <col class="con1" />
        </colgroup>
        <thead>
            <tr>
                <th class="head0">Nama</th>
                <th class="head1">email</th>
                <th class="head0">Propinsi</th>
                <th class="head1">Kota</th>
                <th class="head0">Telepon</th>
                <th class="head1">Type</th>
                <th class="head0">Message</th>
                <th class="head1">Post Date</th>
                <th class="head0">Status</th>
                <th class="head1">Action</th>
            </tr>
        </thead>
        <tbody>          {section name=i loop=$list}
          <tr>
            <td>{$list[i].nama}&nbsp;</td>
            <td>{$list[i].email}</td>
            <td>{$list[i].propinsi}</td>
            <td>{$list[i].kota}</td>
            <td>{$list[i].telepon}</td>
            <td>{$list[i].message_type}</td>
            <td>{$list[i].message}</td>
            <td><nobr>{$list[i].date_time|date_format:"%d-%m-%Y"}</nobr></td>
            <td>{if $list[i].n_status == 0} Failed sent to Email {else} Sent To Email {/if}</td>
            <td align="center" width="4%"><a class="red" href="index.php?s=message&act=delete&id={$list[i].id}" style="text-decoration:none;" onclick="return confirm('Are you sure you want to delete this?')">Delete</a></td>
          </tr>
          {/section}
        </tbody>
    </table>
    <div class="paging">
    	{$paging}
    </div>
</div><!--theContent-->