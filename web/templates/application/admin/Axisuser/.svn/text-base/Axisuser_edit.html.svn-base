<div class="theContent">
    <div class="theTitle">
        <h2>Edit User Axis</h2>
    </div><!--contenttitle-->
    <table cellpadding="0" cellspacing="0" border="0" id="table1" class="stdtable inputable">
        <tbody>
                <form name="cal" method="post" action="" enctype="multipart/form-data" onsubmit="javascript: return validator();">
              <tr class="head">
                <td><strong>User Name</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="username" name="username" style="width:400px;" value="{$username}"/></td>
              </tr>
              <tr class="head">
                <td><strong>Name</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="name" name="name" style="width:400px;" value="{$name}"/></td>
              </tr>
              <tr class="head">
                <td><strong>Nick Name</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="nickname" name="nickname" style="width:400px;" value="{$nickname}"/></td>
              </tr>
              <tr class="head">
                <td><strong>Sex</strong></td>
              </tr>
              <tr>
                <td>
                    <select name="sex" style="width:200px;">
                        <option value=""> - Pilih - </option>
                        {if $sex == L}
                        <option value="L" selected="selected">Laki-laki</option>
                        <option value="P">Perempuan</option>
                        {elseif $sex == P }
                        <option value="L">Laki-laki</option>
                        <option value="P" selected="selected">Perempuan</option>			
                        {else}
                        <option value="L">Laki-laki</option>
                        <option value="P">Perempuan</option>
                        {/if}
                    </select>
                </td>
              </tr>
              <tr class="head">
                <td><strong>Date Birth</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="name" name="birthday" style="width:400px;" value="{$birthday}"/></td>
              </tr>  
              <tr class="head">
                <td><strong>City</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="city" name="city" style="width:400px;" value="{$city}"/></td>
              </tr>
              <tr class="head">
                <td><strong>Street Name</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="streetname" name="streetname" style="width:400px;" value="{$streetname}"/></td>
              </tr>  
              <tr class="head">
                <td><strong>Phone Number</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="phone_number" name="phone_number" style="width:400px;" value="{$phone_number}"/>&nbsp;&nbsp;	
                    {if $verified == 1}
                    <input type="checkbox" name="verified" value="{$verified}" checked="checked">Verified
                    {else}
                    <input type="checkbox" name="verified" value="1">Verified
                    {/if}
                </td>
              </tr>
              <tr class="head">
                <td><strong>Password</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="password" name="password" style="width:400px;"/></td>
              </tr>
              <tr class="head">
                <td><strong>Email</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="email" name="email" style="width:400px;" value="{$email}"/></td>
              </tr>
              <tr class="head">
                <td><strong>Last Name</strong></td>
              </tr>
              <tr>
                <td><input type="text" id="last_name" name="last_name" style="width:400px;" value="{$last_name}"/></td>
              </tr>
              <tr class="head">
                <td><strong>Status</strong></td>
              </tr>
              <tr>
                <td>
                    <select name="n_status" style="width:200px;">
                        {if $status == 0}
                        <option value="0" selected="selected">Pending</option>
                        <option value="1">Staging</option>
                        <option value="2">Production</option>
                        <option value="3">Deleted</option>
                        {elseif $status == 1}
                        <option value="0">Pending</option>
                        <option value="1" selected="selected">Staging</option>
                        <option value="2">Production</option>
                        <option value="3">Deleted</option>
                        {elseif $status == 2}
                        <option value="0">Pending</option>
                        <option value="1">Staging</option>
                        <option value="2" selected="selected">Production</option>
                        <option value="3">Deleted</option>
                        {else}
                        <option value="0">Pending</option>
                        <option value="1">Staging</option>
                        <option value="2">Production</option>
                        <option value="3" selected="selected">Deleted</option>
                        {/if}
                    </select>
                </td>
              </tr>
              <tr>
                <td><input type="submit" value=" Save " class="stdbtn btn_orange">&nbsp;&nbsp; <input type="button" value="Cancel" class="stdbtn btn_yellow" onclick="javascript: window.location.href='index.php?s=axisuser' ;" /></td>
              </tr>
              <input type="hidden" name="cmd" value="add" />
                </form>
        </tbody>
    </table>
</div><!--theContent-->