function validator(){
	tinyMCE.triggerSave();
	if( $('#title').val() == '' ){
		alert("Please fill title");
		return false;
	}else if( $('#brief').val() == '' ){
		alert("Please fill brief");
		return false;
	}else if( $('#teditor').val() == '' ){
		alert("Please fill content");
		return false;
	}
}	
