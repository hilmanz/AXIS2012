<div id="breadcumb" class="wrapper">
	<h1><a href="{$basedomain}">{$locale.home.title}</a> &raquo; <a href="{$basedomain}promo">{$locale.promo.title}</a> &raquo; <a href="{$basedomain}promo/detail/{$content.id}">{$content.title}</a></h1>
</div><!-- end #breadcumb -->
<div id="container">
    <div class="wrapper" id="promoDetail">
    	<div id="imgPromo">
        	<img src="{$basedomain}public_assets/article/{$content.image}" />
        </div>
		
        <div id="contentPromo" class="entryDetail">
		<div class="scrollbar">
        
				<h1>{$content.title}</h1>
				<h3>{$content.brief}</h3>
			 
				{$content.content|replace:'home/app/public_html/':''|replace:'../public_assets/content/uploads/':'public_assets/content/uploads/'}
			
		  
		 </div><!-- end .scrollbar -->
            <div class="socialLike">
            	<a class="favorite" contentid="{if $content.myfavorite}0{else}{$content.parentid}{/if}" href="javascript:void(0)" >&nbsp;<span class="fav-count" countFav="{if $content.favorite}{$content.favorite}{else}0{/if}" >{if $content.favorite}{$content.favorite}{else}0{/if}</span></a>
				
				<!-- s: social media -->
					<div class="facebookLike">
						<a href="#" onclick="shareFB('{$content.title}','{$twitURL}','{$basedomain}public_assets/article/small_{$content.image}','AXISgsm','{$content.brief}');"><img width="63" src="{$basedomain}assets/images/icon/facebook_share_button.png"></a>
						{*}
						<fb:like send="false" layout="button_count" width="450" show_faces="false"></fb:like>
						{/*}
					</div><!-- end .facebookLike -->
                    <div class="shareTwit">
						<a href="https://twitter.com/share" class="twitter-share-button" data-url="{$twitURL}" data-counturl="{$twitURL}" data-via="AXISgsm" data-text="{$content.title}" data-lang="en">Tweet</a>
					{literal}
						<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
					{/literal}
                    </div>
						<div class="googlePlus">
					{literal}
						<script type="text/javascript" src="https://apis.google.com/js/plusone.js">
					  {parsetags: 'explicit'}
						</script>
					{/literal}
						<div class="g-plusone" data-size="medium" data-annotation="bubble" data-width="120" data-href="{$twitURL}"></div>
						<script type="text/javascript">gapi.plusone.go();</script>
						</div><!-- end .googlePlus -->
				<!-- e: social media -->
            </div><!-- end .socialLike -->
        </div><!-- end #contentPromo -->
    </div><!-- end #promoDetail -->
</div><!-- end #container -->
<div class="widget-promoDetail">
{$carousel_promo}
</div><!-- end .widget-whyAxis -->
{if $content.popuparticle}
	{section name=i loop=$content.popuparticle}
	<div class="popup" id="popup_{$content.id}_{$content.popuparticle[i].id}" >
		<div class="ui-overlay">
			<div class="ui-widget-overlay"></div>
		</div><!-- end .ui-overlay -->
		<div class="popupContent" style="position:absolute">
			<a class="closePopup" href="#">X</a>
			 <div style="padding:40px">  
				<div class="headPopup">
					<h3 class="global-title">{$content.popuparticle[i].title}</h3>
				</div>
				<div class="entry">
					<p class="global-msg">{$content.popuparticle[i].description|replace:'home/app/public_html/':''|replace:'../public_assets/content/uploads/':'public_assets/content/uploads/'}</p>
				</div><!-- end .entry -->
			</div>
		</div><!-- end .popupContent -->
	</div><!-- end .popup -->
		
	{/section}
{/if}

<script type="text/javascript" src="{$assets_domain}js/dsa.js"></script>
