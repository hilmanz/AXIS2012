<div class="wrapper" id="contactBox">
	<div class="headContact">
    	{$locale.customercare.lewatemail}
    </div><!-- end .headContact -->
    <div class="entryContact">
    	<form class="contactForm validate" action="{$basedomain}customer_care/saveMessage" id="contactForm" method="POST" >
        	<div class="w300 rowBtns">
				<div>
					<input type="text" name="txtName" value="{$locale.customercare.nama}" onBlur="if(this.value=='')this.value='{$locale.customercare.nama}';" onFocus="if(this.value=='{$locale.customercare.nama}')this.value='';$('#txtName_error').hide()" class="alpha required" />
				</div>
				<div>
					<input type="text" value="Email" name="txtEmail" onBlur="if(this.value=='')this.value='Email';" onFocus="if(this.value=='Email')this.value='';$('#txtEmail_error').hide()" class="email required" />
				</div>
				<div>
					<input type="text" name="txtTelepon" value="{$locale.customercare.noaxis}" onBlur="if(this.value=='')this.value='{$locale.customercare.noaxis}';" onFocus="if(this.value=='{$locale.customercare.noaxis}')this.value='';$('#txtTelepon_error').hide()" class="numeric required" />
                </div>
				<div>
					<select id="select1" name="txtPropinisi" class="styled required">
						<option value="" >{$locale.customercare.propinsi}</option>
						{section name=i loop=$province}
							<option value="{$province[i].id}">{if $locale.country==1}{$province[i].province}{else}{$province[i].province_en}{/if}</option>
						{/section}
					</select>
                </div>
				<div>
					<select id="select2" name="txtKota" class="styled required">
						<option value="" >{$locale.customercare.kota}</option>
					</select>
               </div>
				<div>
					<select  name="txtTipe"  class="styled required">
						<option value="">{$locale.customercare.jenispertanyaan}</option>
						{section name=i loop=$msgType}
							<option value='{$msgType[i].id}'>{$msgType[i].type}</option>
						{/section}
					</select>
				</div>
            </div>
            <div class="w600">
            	<textarea name="txtMessage" onFocus="$('#txtMessage_error').hide()" class="required " ></textarea>
				
                <div class="agreement">
                	<input type="checkbox" id="checkthis" name="checkTXT"  class="styled"/>
                    <label>{$locale.customercare.custos}</label>
					<span class="tosMsg" ></span>
                </div>
				<div class="captcha">
                	 <img height="50" src="assets/captcha.php">
                	 <input type="text" class="required numeric" onfocus="$('#captcha_error').hide()" name="captcha">
                </div>
                <input type="submit" class="kirim" value="&nbsp;" />
            </div>
        </form>
    </div><!-- end .entryContact -->
   
