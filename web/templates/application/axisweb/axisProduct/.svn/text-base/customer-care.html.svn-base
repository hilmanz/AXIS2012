<script>
	var kota = '{$locale.customercare.kota}';
	var basedomain = "{$basedomain}";
	var country = {$locale.country};
{literal}
	var required = v2.Validator.get('required').getMessage();
	
$("#contactForm").submit(function(){
	if($('input[name=txtName]').val() == 'Nama' || $('input[name=txtName]').val() == 'Name'){ 
		$('.rowBtns div:eq(0)').prepend('<div id="hackNamemsg" class="error"><ul id="txtEmail_error" class="messages"><li>'+required.message+'</li></ul></div>');
		return false;
	}else{
		$('#hackNamemsg').remove();
	}
	$(".failedtosend").hide();
	$(".successend").hide();
	$(".wrongcaptcha").hide();
	$('html, body').animate({scrollTop: '800px'}, 800);
	
	var arrRequired = new Array();
	$(".required").each(function(i,e){
		if($(this).val()=='')arrRequired.push(false);
		else arrRequired.push(true);
	})
	
	if($.inArray(false,arrRequired)>0) return false;
	
	$(this).ajaxSubmit(function(data) {
		if(data.captcha){
			if(data.result) {
			//alert ("sukses");
					$(".ui-overlay").show();
					$(".successend").show();
					$('.sendmessage').show();
					//$(".required").val('');
					//$("#selecttxtPropinisi").html('');
					//$("#selecttxtTipe").html('');
					//$("#selecttxtKota").html('');
				}else {
			//alert ("gagal");
					$(".ui-overlay").show();
					//$(".failedtosend").show();
					$(".successend").show();
					$('.sendmessage').show();
					//$(".required").val('');
					//$("#selecttxtPropinisi").html('');
					//$("#selecttxtTipe").html('');
					//$("#selecttxtKota").html('');
				}
		}else {
			$(".ui-overlay").show();			
			$(".wrongcaptcha").show();
			$('.sendmessage').show();
		}
	});
	return false; 
});

$('#select1').change(function(){
	$('#select2').html('<option value="">'+kota+'</option>');
	$('#selectselect2').html(kota);
	var province = $(this).val();
	$.post(basedomain+'isi_ulang/getCitybyProvince', {province : province}, function(city){
		var str='';
		str+='<option value="">'+kota+'</option>';
		$.each(city, function(k,v){
			if(country==1) str+='<option value="'+v.id+'">'+v.city+'</option>';
			else str+='<option value="'+v.id+'">'+v.city_en+'</option>';
		});
		$('#select2').html(str);
	});
});
$('.ui-overlay').click(function(){
	window.location = basedomain+"customer_care";
});

{/literal}
</script>

