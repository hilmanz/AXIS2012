<script>
var basedomain = "{$basedomain}";
var localemsg = "{$locale.axislife.mohonisi}";
{literal}
$("#submitArticleForm").submit(function(){

	if($("#checkthis:checked").val()!="on") {
		$(".tosMsg").html("<span style='color:#ff0000;'> "+ localemsg +" </span>");
		return false;
	}
	var arrRequired = new Array();
	$(".required").each(function(i,e){
		if($(this).val()=='')arrRequired.push(false);
		else arrRequired.push(true);
	})
	if($.inArray(false,arrRequired)>0) return false;
	return true;
});

</script>

